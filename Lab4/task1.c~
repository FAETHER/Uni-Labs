// Example program

#include <stdio.h>
#include <stdlib.h>
#include "math.h"

inline size_t fstrlen (const char* s) 
{
	register const char* i;
	for(i=s; *i; ++i);
	return (i-s);
}


#define DEBUG
#ifdef DEBUG
#   define ASSERT(condition, message) \
    do { \
        if (! (condition)) \
		{ \
			printf("%s \n", message);\
			printf("Assertion %s failed in, %s line: %d \n", #condition, __FILE__, __LINE__);\
			char buf[10];					\
			fgets(buf, 10, stdin); \
			exit(1); \
        } \
    } while (0)
#else
#   define ASSERT(condition, message) do { } while (0)
#endif

int main()
{
  int len;
  scanf ("%d",&len);

  if(len != 3)
  {
    ASSERT(0, "Input must be 3");
  }
 
  int ints[len];
  
  for(int i = 0; i<len; i++)
  {
      scanf("%d", &ints[i]);
  }
  
  printf("Average: %.4lf\n", (double)(ints[0]+ints[1]+ints[2]) / 3);
    
}
